{
  "$schema": "https://railway.app/schema.json",
  "build": {
    "builder": "PYTHON",
    "pythonVersion": "3.12"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "startCommand": "gunicorn --bind 0.0.0.0:$PORT --workers 2 --timeout 120 backend:app"
  }
}
